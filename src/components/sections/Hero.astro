---
import Section from '@layouts/ui/Section.astro'
import { basics } from '@cv'
import Mail from 'icons/Mail.astro'
import Phone from 'icons/Phone.astro'
import X from 'icons/X.astro'
import LinkedIn from 'icons/LinkedIn.astro'
import GitHub from 'icons/GitHub.astro'
import WorldMap from 'icons/WorldMap.astro'
import { Image } from 'astro:assets'

const { name, label, image, location, profiles, phone, email } = basics
const { city, region } = location

const SOCIAL_ICONS: Record<string, any> = {
  GitHub,
  LinkedIn,
  X,
}

const linkedInfo = profiles.find(({ network }) => network === 'LinkedIn')
const linkedUrl = linkedInfo?.url

const printInfo = [email, phone, linkedUrl].filter(Boolean).join(' • ')
---

<Section>
  <div class='container'>
    <div class='info'>
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span>
        <WorldMap title='Localização' />
        {city}, {region}
      </span>
      <footer>
        <div class='print'>
          {printInfo}
        </div>
        <div class='no-print'>
          {
            email && (
              <a
                href={`mailto:${email}`}
                title={`Enviar um email para ${name} em ${email}`}
                target='_blank'
                rel='noopener noreferrer'
                class='link'
              >
                <Mail title={`Enviar um email para ${name} em ${email}`} />
              </a>
            )
          }
          {
            phone && (
              <a
                href={`tel:${phone}`}
                title={`Ligar para ${name} em ${phone}`}
                target='_blank'
                rel='noopener noreferrer'
                class='link'
              >
                <Phone title={`Ligar para ${name} em ${phone}`} />
              </a>
            )
          }
          {
            profiles?.map(({ network, url, username }) => {
              const Icon = SOCIAL_ICONS[network]
              return (
                <a
                  href={url}
                  title={`Perfil de ${username} no ${network}`}
                  target='_blank'
                  rel='noopener noreferrer'
                  class='link'
                >
                  <Icon title={`Perfil de ${username} no ${network}`} />
                </a>
              )
            })
          }
        </div>
      </footer>
    </div>

    <figure>
      <Image
        src={image}
        alt={name}
        width={128}
        height={128}
        loading={'eager'}
        class='avatar'
      />
    </figure>
  </div>
</Section>

<style>
  .container {
    display: flex;
    flex-direction: row;
    width: 100%;
    align-items: center;
    justify-content: space-between;
    margin: 0;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-right: 32px;
  }

  .no-print {
    margin: 0;
    padding: 0;
    display: flex;
    gap: 0.5rem;
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
  }

  .avatar {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 128px;
    border-radius: 999px;
  }

  span {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }

  footer {
    color: #3a539b;
    font-size: 0.65rem;
    display: flex;
    gap: 4px;
    margin-top: 8px;
  }

  footer a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #3a539b;
    padding: 4px;
    height: 32px;
    width: 32px;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  footer a:hover {
    background: #eee;
    border: 1px solid #ddd;
  }

  @media (width <= 700px) {
    .container {
      flex-direction: column-reverse;
    }

    .info {
      justify-content: center;
      align-items: center;
      padding-right: 0;
      text-align: center;
    }

    figure {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    h2 {
      text-wrap: balance;
    }
  }
</style>
